
<%-include('header')-%>
<style>
    body{
    margin: 0;
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
    background: #8282bc;
    height: 100vh;
    overflow: hidden;
}

.signUp{
    position:absolute;
    top:50%;
    left:50%;
    transform: translate(-50% ,-50%);
    width: 400px;
    background-color: white;
    border-radius: 15px;
    
}

.signUp h1{
    text-align: center;
    padding: 0 0 20px 0;
    border-bottom: 1px solid silver;

    
}
.signUp form{
    height: 50vh;
   padding: 0 40px;
   box-sizing: border-box;
}

form .text_field{
    position: relative;
    border-bottom:2px solid gray;
    margin: 30px 0;

}
.signUp input{
    width: 75%;
    padding: 0 5px;
    height :30px;
    font-size: 16px;
    border:none;
    background: none;
    outline: none;
    padding-bottom: 10px;

}
input[type="submit"]{
    
   width:45%;
   height:35px;
   background: #2691d9;
   border-radius: 25px;
   border: none;
   font-size: 18px;
   color: white;
   font-weight: 700px;
   cursor: pointer;
   
}
body h1{
    padding-left: 20px;
}
</style>
<a href="/"><h1>home</h1></a>
<div class="signUp">
    <h1>Register</h1>
    <form action="/register" method="post">
    <input type="text" placeholder="name" required><br>
    <input type="email" placeholder="email" required><br>
    <input type="password" placeholder="password" required><br>
    <input type="tel" placeholder="mobile Number" required><br>
    <input type="submit" id="btn" value="signUp">
    </form>
</div>

<%-include('footer')-%>